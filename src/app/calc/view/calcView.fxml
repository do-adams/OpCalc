<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<VBox fx:controller="app.calc.controller.Controller"
      xmlns:fx="http://javafx.com/fxml" fx:id = "container" stylesheets="@calcView.css">
    <Label fx:id="title" text="OpCalc"/>
    <Text fx:id="instructions" text="Please enter a basic arithmetic expression:"/>
    <TextArea fx:id="textInput"/>
    <HBox style="-fx-spacing:10">
        <Button text="Clear" onAction="#doClear"/>
        <Button text="Enter" onAction="#doCalc"/>
    </HBox>
    <TextField fx:id="textOutput"></TextField>
</VBox>